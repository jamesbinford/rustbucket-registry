# Django settings
SECRET_KEY=your-secret-key-here-generate-with-django
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost

# Database settings
DB_NAME=rustbucket_registry
DB_USER=rustbucket_user
DB_PASSWORD=change-this-strong-password
DB_ROOT_PASSWORD=change-this-root-password
DB_HOST=localhost
DB_PORT=3306

# AWS S3 settings (for log storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_REGION=us-east-1
AWS_S3_BUCKET_NAME=rustbucket-registry-logs

# Email settings (for notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=rustbucket-registry@yourdomain.com

# Scheduler settings
RUN_SCHEDULER=true